{% extends "base.html.twig" %}

{% block content %}

    <div class="login-box">
        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-logo text-center">
                    <img src="../../dist/img/cswd-logo.png" alt="AdminLTE Logo" class="brand-image" style="max-width:80px;float:left">
                                        <img src="../../dist/img/tanuan-logo.png" alt="AdminLTE Logo" class="brand-image " style="max-width:150px;float:center">

                    <img src="../../dist/img/araw-logo.png" alt="AdminLTE Logo" class="brand-image" style="max-width:80px;float:right">
                </div>
                
                <div style='clear:both;'></div>
                <div class'container'>
                    <div class='row'>
                        <div class='col-8 columns'>            
                            <p class="login-box-msg">Sign in to start your session</p>

                            {% include 'flash_message.html.twig' %}
                            <form action="{{ path('auth_login') }}" method="post">
                                <div class="input-group mb-3">
                                    {{ form_widget(form.username)}}
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    {{ form_widget(form.password)}}
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                        </div>  
                                    </div>
                                </div>

                                {{ form_widget(form._token) }}
                                <div class="row">
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class='col-4 columns'>
                            <div class='mayor-img-container'>
                                <img src='../../dist/img/tanuan-mayor.png' style='max-width:80px;'/>
                            </div>
                        </div>
                    </div>
                <div>
            </div>
        </div>  
    </div>


    {% include "js.html.twig" %}

{% endblock %}